#!/bin/bash

EXPND=$HOME/expanded
COMPL=$HOME/completed
LOG=$HOME/.local/var/log/posttorrent.log
FIFO=$HOME/.local/tmp/seedboxsync.fifo
TIME=$(date +%Y.%m.%d\ %H:%M:%S)
SRC=$1

if [[ ! -a "${SRC}" ]] ; then
	# echo "[${TIME}] Changing name from ${SRC}" >> $LOG
	BASE=$(basename "${SRC}")
	SRC="${COMPL}/${BASE}"
	# echo "[${TIME}] to ${SRC}"  >> ${LOG}
fi

# echo "[${TIME}] Evaluating ${SRC}" >> ${LOG}
if [[ -d "${SRC}" ]] ; then
	RARFILE=$(find "${SRC}" -maxdepth 1 -name *.rar | head -1)
	if [[ -f "${RARFILE}" ]] ; then
		echo "[${TIME}] Extracting ${RARFILE}" >> ${LOG}
		unrar x -inul "${RARFILE}" ${EXPND}
#		echo "[${TIME}] Done" >> ${LOG}
	fi
fi

# Dropbox copy
shopt -qs nocasematch
if [[ "${SRC}" =~ Apprentice ]] ||
		[[ "${SRC}" =~ British.Bake ]] ||
		[[ "${SRC}" =~ Big.Family.Cooking.Showdown ]] ||
		[[ "${SRC}" =~ Beecham.House ]] ||
		[[ "${SRC}" =~ Jamie ]] ||
		[[ "${SRC}" =~ Nigella.At.My.Table ]] ||
		[[ "${SRC}" =~ Victoria ]] ||
		[[ "${SRC}" =~ W1A ]] ||
		[[ "${SRC}" =~ Bollywood ]] ||
		[[ "${SRC}" =~ Press ]] ||
		[[ "${SRC}" =~ Queen.of.the.World ]] ||
		[[ "${SRC}" =~ Desi.Rascals ]] ; then
	echo "[${TIME}] Uploading ${SRC}" >> ${LOG}
	VIDFILE="${SRC}"
	if [[ -d "${SRC}" ]] ; then
		VIDFILE=$(find "${SRC}" -iname "*.mp4" -o -iname "*.mkv")
	fi
	ONEDRIVE_DIR="Videos/Anju"
	rclone --log-file=${LOG} copy -v "${VIDFILE}" "OneDrive:${ONEDRIVE_DIR}" & disown
fi

if [[ "${SRC}" =~ Formula.*1080 ]] ; then
	echo "[${TIME}] Uploading ${SRC}" >> ${LOG}
	ONEDRIVE_DIR="Videos/Dad/$(basename ${SRC})"
	rclone --log-file=${LOG} mkdir "OneDrive:${ONEDRIVE_DIR}"
	rclone --log-file=${LOG} copy -v "${SRC}" "OneDrive:${ONEDRIVE_DIR}" & disown
fi

if [[ -e ${FIFO} ]] ; then
#	echo "[${TIME}] Sending go" >> ${LOG}
	echo "${TIME}" > ${FIFO}
#	echo "[${TIME}] Done" >> ${LOG}
fi
